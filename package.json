{
  "name": "randochess",
  "version": "1.0.0",
  "description": "Randomized chess variant with multiplayer support",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "build:v2": "esbuild v2/src/index.ts --bundle --outfile=v2/dist/bundle.js --sourcemap",
    "dev:v2": "esbuild v2/src/index.ts --bundle --outfile=v2/dist/bundle.js --sourcemap --watch",
    "serve:v2": "npx http-server v2 -p 8080"
  },
  "keywords": ["chess", "game", "multiplayer", "websocket"],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "ws": "^8.14.2"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "esbuild": "^0.17.0",
    "typescript": "^5.0.0",
    "http-server": "^14.1.1"
  }
}
